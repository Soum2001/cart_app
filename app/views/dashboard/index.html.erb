<%
=begin%>
 <div class="container">
    <% if can? :manage, :dashboard %>
        <% @user.each do |user| %>
            <h1>Welcome to your dashboard, <%= user.first_name %>!</h1>
        <%end%>
    <% else %>
        <!-- Display content for regular user -->
        <h1>Welcome,<%= @user.first_name%></h1>
    <% end %>
</div> 
<%
=end%>


    <%
=begin%>
 <div class="container"> 
        <div class="row">
        <% if can? :manage, :dashboard %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Customer name</th>
                        <th scope="col">Email</th>
                        <th scope="col">action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @user.each do |user| %>
                        <tr>
                            <td scope="row"><%= user.first_name %></th>
                            <td><%= user.email %></td>
                            <td><%= button_to "delete", class: "btn btn-success" ,method: :delete%></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        <% else %>
            <!-- Display content for regular user -->
            <h1>Welcome,<%= @user.first_name%></h1>
        <% end %>
        </div> 
    </div> 
<%
=end%>

<div class="container py-5 h-100">
<% if can? :manage, :dashboard %>
<h3>Dashboard</h3>
    <div class="row">
        <div class="col-lg-3 col-sm-12 col-xs-12">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h2 class="card-title"><%= User.count%></h2>
                    <h4 class="card-text">Total Customer</h4>
                    <%= link_to 'More details', products_path%>
                </div>
            </div>
        </div> 
        <div class="col-lg-3 col-sm-12 col-xs-12">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h2 class="card-title"><%= Category.count%></h2>
                    <h4 class="card-text">Available Category</h4>
                    <%= link_to 'more details', categories_path%>
                </div>
            </div>
        </div> 
        <div class="col-lg-3 col-sm-12 col-xs-12">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h2 class="card-title"><%= Product.count%></h2>
                    <h4 class="card-text">Available Products.</h4>
                    <%= link_to 'more details', products_path%>
                </div>
            </div>
        </div>      

        <div class="col-lg-3 col-sm-12 col-xs-12">
            <div class="card" style="width: 18rem;height: 139px;">
                <div class="card-body">
                    <h2 class="card-title"><%= Order.sum('total_price')%></h2>
                    <h4 class="card-text">Total Revenue</h4>

                </div>
            </div>
        </div>    
    </div>
    <hr class="my-4">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <div class="card-body p-0">
            <div class="row g-0">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="d-flex justify-content-between align-items-center mb-5">
                            <h1 class="fw-bold mb-0 text-black">Customer Details</h1>
                        </div>
                            <%= render "table" %>
                            <% else %>
                                <!-- Display content for regular user -->
                                <%= render "profile" %>
                        <% end %>
                    
                    </div>
                </div>

            </div>
          </div>
        </div>
      </div>
    </div>
</div>
