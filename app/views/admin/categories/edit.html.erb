<div class="mt-4">
	<div class="container">
		<% if flash[:notice] %>
		<div class="alert alert-success">
			<%= flash[:notice] %>
		</div>
	<% end %>
	<% if flash[:alert] %>
		<div class="alert alert-danger">
		<% flash[:alert].each do |notice| %>
			<%= notice %>
			<br/>
		<%end%>
		</div>
	<% end %>
	<h3>Edit Category</h3>
		<%= form_for @category, :url => { :action => "update" } do |f| %>
		<div class="col-auto flex-grow-1">
			<%= f.label :category_name, class: "visually-hidden" %>
			<%= f.text_field :category_name, placeholder: "category name", class: "form-control" %>
		</div>
		<br/>
		<div class="col-auto" ,style="text-align: center;" style="text-align: center;">
			<%= f.submit "Save", class: "btn btn-primary btn-lg" %>
		</div>
		<% end %> 
	</div>
</div>
