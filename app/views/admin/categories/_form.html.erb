<% if category.errors.any? %>
  <div class="alert alert-danger">
    <%= category.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= form_for @category, :url => { :action => "create" } do |f| %>
  <div class="col-auto flex-grow-1">
    <%= f.label :category_name, class: "visually-hidden" %>
    <%= f.text_field :category_name, placeholder: "category name", class: "form-control" %>
  </div>
  <br/>
  <div class="col-auto" ,style="text-align: center;" style="text-align: center;">
    <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>