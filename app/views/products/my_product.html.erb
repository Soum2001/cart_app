<% if flash[:notice] %>
	<div class="alert alert-success">
		<%= flash[:notice] %>
	</div>
<% end %>
<% if flash[:alert] %>
	<div class="alert alert-danger">
		<%= flash[:alert] %>
	</div>
<% end %>
<div class="row mx-0">
<%=render 'category'%>
	<div class="col-md-10 px-0">
		<div class="container">
			<%if @products.blank?%>
				<div class="col-sm-6">
					<h1 style="margin-top: 156px;margin-left: 211px;">You don't have any product. Please add</h1>
				</div>
				<div class="d-flex justify-content-between align-items-center mb-5">
					<h6 class="mb-0 text-muted" style="margin-left: 310px;margin-bottom: -43px;">
						<%= link_to "Add Product", new_product_path, class: "btn btn-primary"%>
					</h6>
				</div>
			<%else%>
				<h1>My Product</h1>
				<% if !@role.nil? %>
					<div class="d-flex justify-content-between align-items-center mb-5">
						<h6 class="mb-0 text-muted">
							<%= link_to "Add Product", new_product_path, class: "btn btn-primary"%>
						</h6>
					</div>
				<%end%>
				<%= form_tag my_product_products_path, method: :get, class: "d-flex" do %>
					<%= hidden_field_tag :category_id, @category_id %>
					<%= text_field_tag :search, nil, class: "form-control me-2", placeholder: "Search", aria: { label: "Search" }, id: "search_product" %>
					<%= button_tag "Search", type: :submit, class: "btn btn-outline-success" %>
				<% end %> 
				<br/>
				<div class="row">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Product Name</th>
								<th scope="col">Price</th>
								<th scope="col">Quantity</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							<% @products.each do |product| %>
								<tr>
									<td scope="row"><%= product.name%></th>
									<td><%= product.price %></td>
									<td><%= product.quantity %></td>
									<td>
										<div class="button-group">
											<%= button_to "delete", product_path(product.id), class: "btn btn-danger btn-sm", method: :delete  %>
											<%= button_to "edit", edit_product_path(product.id), class: "btn btn-warning btn-sm", method: :get  %>
											<%= link_to "add quantity", add_quantity_products_path(id: product.id), method: :get, id: "add_quantity#{product.id}", class: "btn btn-success", data: {
											value: product.id,
											bs_toggle: 'modal',
											bs_target: "#exampleModal",
											remote: true
											} %>
										</div>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div> 
				<div class="row">
					<div class="col-md-12">
						<div style="text-align: center">
							<%= button_to "back", products_path, method: :get, class: "btn btn-warning btn-lg" %>
						</div>
					</div>
				</div>
				<%= paginate @products %>
			<%end%>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add quantity</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="edit_quantity">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
	 </div>
    </div>
  </div>
</div>

