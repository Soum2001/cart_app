<div class="row">
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Product Name</th>
				<th scope="col">Price</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
				<tr>
					<td scope="row"><%= product.name%></th>
					<td><%= product.price %></td>
					<td>
						<div class="button-group">
							<%= button_to product_path(product.id), method: :delete, class: "btn btn-danger btn-sm" do %>
								<i class="fas fa-trash"></i> 
							<% end %>
							<%= button_to edit_product_path(product.id), method: :get, class: "btn btn-warning btn-sm" do %>
								<i class="fas fa-edit"></i> 
							<% end %>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div> 


	<%
=begin%>
 <div class="col-md-4">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Seller</h5>
				<%= form_tag products_path, method: :get, class: "d-flex" do %>
					<%= hidden_field_tag :category_id, @category_id %>
					<%= text_field_tag :search, nil, class: "form-control me-2", placeholder: "Search", aria: { label: "Search" }, id: "search_product" %>
					<%= button_tag "Search", type: :submit, class: "btn btn-outline-success" %>
				<% end %> 
			</div>
		</div> 
<%
=end%>
	</div>