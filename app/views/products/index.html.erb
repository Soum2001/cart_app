
<section style="background-color: #eee;">
    <div class="container">
        <h1>Product Details</h1>

        <div class="row">
            <% @products.each do |product| %>
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <%= product.name%> </br>
                            <%= product.price %> </br>
                            <%= button_to "Add Cart", cart_items_path + "?product_id=#{product.id}",  method: :post %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>

<%= paginate @products %>



