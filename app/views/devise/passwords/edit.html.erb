



<div class="container">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-md-5" style="text-align:center">
      <div class="card" style="margin-top: 173px">
        <div class="card-body">
        <h3><i class="fa fa-lock fa-4x"></i></h3>
          <h2 class="card-title">Change your password</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: 'form-control',placeholder: 'enter password' %><br/>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control',placeholder: 'enter confirm password' %><br/>
            </div>

            <div class="actions">
              <%= f.submit "Change my password",class: 'btn btn-primary' %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>