<div class="container py-5 h-100">
	<div class="row d-flex justify-content-center align-items-center h-100">
		<div class="col-12">
			<%if @cart_items.present?%>
					<div class="card card-registration card-registration-2" style="border-radius: 15px;">
						<div class="card-body p-0">
							<div class="row g-0">
								<div class="col-lg-12">
									<div class="p-5">
										<div class="d-flex justify-content-between align-items-center mb-5">
											<h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
										</div>
										<% @cart_items.map do |cart_item| %>
												<hr class="my-4">
												<div class="row mb-4 d-flex justify-content-between align-items-center">
													<div class="col-md-2 col-lg-2 col-xl-2">
														<div class="card">
															<div class="card-body">
																<h5><%= cart_item.product.name%> image</h5>
															</div>
														</div>
													</div>
													<div class="col-md-3 col-lg-3 col-xl-3">
														<h6 class="text-black mb-0"><%= cart_item.product.name%></h6>
													</div>
													<div class="col-md-3 col-lg-3 col-xl-2 d-flex">
														<%= button_to "-", user_cart_item_path(product_id: cart_item.product.id, id: cart_item.id),params: {:quantity => "decrement"}, method: :patch, class: "btn btn-danger"%>
														<input id="form1" min="0" name="quantity" value=<%= cart_item.quantity %>  type="number" class="form-control form-control-sm" style= "text-align:center" disabled/>
														<%= button_to "+", user_cart_item_path(product_id: cart_item.product.id, id: cart_item.id), params: {:quantity => "increment"}, method: :patch, class: "btn btn-success"%>
													</div>
													<div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
														<h6 class="mb-0"><%= cart_item.product.price * cart_item.quantity%></h6>
													</div>
													<div class="col-md-1 col-lg-1 col-xl-1 text-end">
														<a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
													</div>
												</div>
										<%end%>
									</div>
								</div>
							</div>
						</div>
					</div>
					<br/>
					<div class="row">
						<div class="col-md-12">
							<div style="text-align: center">
								<%= button_to "order checkout", user_orders_path, method: :post, class: "btn btn-warning btn-lg"%>
							</div>
						</div>
					</div> 
			<%else%>
				<h1 style="text-align:center">Cart is empty</h1>
			<%end%>
		</div>
	</div>
</div>



