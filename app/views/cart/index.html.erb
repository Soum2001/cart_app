<section style="background-color: #eee;">
    <div class="container">
        <h1>My Cart</h1>
        <div class="row">
            <%if @cart_items.present?%>
                <% @cart_items.map do |cart_item| %>
                    <div class="col-sm-4">
                        <div class="card">
                            <div class="card-body">
                                <p>Product Name: <%= cart_item.product.name%> </p>
                                <p>Price: <%= cart_item.product.price %></p>
                                <p>Quantity: <%= cart_item.quantity %> </p>
                                <div class= "row">
                                    <div class="col-sm-2">
                                        <%= button_to "-", cart_items_path + "?product_id=#{cart_item.product.id}",params: {:act => "dec"}, method: :put,  data: { confirm: "Are you sure?" }, class: "btn btn-danger", :remote => true%>
                                    </div>  
                                    <div class="col-sm-2">
                                        <%= button_to "+", cart_items_path + "?product_id=#{cart_item.product.id}", params: {:act => "inc"}, method: :put, class: "btn btn-success", :remote => true%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
                <div class="row">
                    <div class="col-md-12 ">
                        <%= button_to "order checkout", orders_path, method: :post, class: "btn btn-warning"%>
                    </div>
                </div> 
            <%else%>
                <h3>Cart is empty</h3>
            <%end%>
        </div>
    </div>
</section>