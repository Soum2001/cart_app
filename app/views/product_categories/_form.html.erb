
<% if category.errors.any? %>
  <div class="alert alert-danger">
    <%= category.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= form_with model: category, class: "row g-3 mb-3" do |f| %>
  <div class="col-auto flex-grow-1">
    <%= f.label :category_name, class: "visually-hidden" %>
    <%= f.text_field :category_name, placeholder: "category name", class: "form-control" %>
  </div>

  <div class="col-auto">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>